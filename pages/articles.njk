---
title: "Articles"
layout: "../layouts/main.njk"
permalink: "/articles/index.html"
description: List of KnowHowCode articles
ogUrl: "https://www.knowhowcode.dev/articles/"
---

<div class="articles-grid">
  {% for a in collections.articles %}
    <article class="article-card {% if loop.first %}article-featured{% endif %}">
      <a href="{{ a.url }}" class="article-link">
        {% if a.data.cover %}
          <article-image src="/public{{ a.data.cover }}" alt="{{ a.data.title }}" thumbnail="true" class="thumbnail-article-image" {% if loop.first %}featured{% endif %}></article-image>
        {% else %}
          <div class="article-image"></div>
        {% endif %}

        <div class="article-content">
          <h2 class="article-title">{{ a.data.title }}</h2>
          <p class="article-description">{{ a.data.description }}</p>

          <div class="article-meta">
            {% if a.data.date %}
              <div class="article-date">
                <sl-icon name="calendar" style="font-size: 14px;"></sl-icon>
                <time datetime="{{ a.data.date | date('c') }}">
                  {{ a.data.date | date('MMMM d, yyyy') }}
                </time>
              </div>
            {% endif %}
            {% if a.data.author and a.data.author.name %}
              <div class="article-author">
                <sl-icon name="person" style="font-size: 14px;"></sl-icon>
                {{ a.data.author.name }}
              </div>
            {% endif %}
            {% if a.data.readingTime %}
              <div class="article-reading-time">
                <sl-icon name="clock" style="font-size: 14px; position: relative;"></sl-icon>
                {{ a.data.readingTime }} min
              </div>
            {% endif %}
          </div>

          <div class="article-tags">
            {% if a.data.tags %}
              {% set tagCount = 0 %}
              {% for tag in a.data.tags %}
                {% if tag != "articles" and tagCount < 2 %}
                  <sl-badge variant="primary" pill>{{ tag }}</sl-badge>
                  {% set tagCount = tagCount + 1 %}
                {% endif %}
              {% endfor %}
            {% endif %}
          </div>
        </div>
      </a>
    </article>
  {% endfor %}
</div>