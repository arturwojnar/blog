  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "build": "tsc && npm run build:11ty && npm run build:sitemap",
    "build:ts": "tsc",
    "dev:ts": "nodemon --watch api --ext ts --exec \"node api/index.ts\"",
    "build:11ty": "node ./node_modules/.bin/eleventy",
    "build:sitemap": "node ./generate-sitemap.ts",
    "dev:11ty": "node ./node_modules/.bin/eleventy --watch",
    "dev": "concurrently \"npm:dev:11ty\" \"npm:dev:ts\"",
    "start": "node api/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/arturwojnar/blog.git"
