    "@11ty/eleventy": "~3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "~5.0.2",
    "@types/express": "~5.0.3",
    "@vercel/node": "^3.2.29",
    "concurrently": "~9.2.1",
    "nodemon": "~3.1.10",
    "typescript": "~5.9.3"
